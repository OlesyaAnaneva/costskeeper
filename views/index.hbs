<button class="btn waves-effect #ef9a9a red lighten-3 btn-large" type="submit" name="action">Talk
  <i class="material-icons right">mic</i>
</button>

<h3 id="content"></h3>
<p>Say just two words... like "cola" and "fifty"</p>
<table class="highlight">
  <thead>
    <tr>
      <th>Item Name</th>
      <th>Item Price</th>
    </tr>
  </thead>

  <tbody class="items">
    {{#each words}}
    <tr>
      <td>{{this.name}}</td>
      <td>{{this.price}}</td>
    </tr>
    {{/each}}

  </tbody>
  <tr>
    <td id="total"><b>Total</b></td>
    <td><b>{{total}}</b></td>
  </tr>
  <td id="categ"><b>Categories</b></td>
  <tr>
    <td><b>Broccoli 🥦</b></td>
    <td><b>{{broccolitotal}}</b></td>
  </tr>
  <tr>
    <td><b>Fish 🐟</b></td>
    <td><b>{{fishtotal}}</b></td>
  </tr>
  <tr>
    <td><b>Milk 🥛</b></td>
    <td><b>{{milktotal}}</b></td>
  </tr>
  <tr>
    <td><b>Cake 🍰</b></td>
    <td><b>{{caketotal}}</b></td>
  </tr>
  <tr>
    <td><b>Bread 🍞</b></td>
    <td><b>{{breadtotal}}</b></td>
  </tr>
  <tr>
    <td><b>Meat 🥩</b></td>
    <td><b>{{meattotal}}</b></td>
  </tr>
</table>

